@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Buttons
@inject NavigationManager navigationManager

<style>
    * {
        font-family: 'Roboto', sans-serif;
    }

    .navbar-container{

    }

    .e-sidebar {
        background-color: #f8f8f8;
        color: black;
    }

    .text-content {
        font-size: 1.5rem;
        padding: 3rem;
    }

    nav {
        margin-top : 13vh;
    }

    nav ul {
        list-style: none; /* Removes bullet points from unordered lists */
        display : flex;
        flex-direction : column;
    }

    nav li {
        display : flex;
        align-items : center;
        justify-content : flex-start;
        height : 7vh;
        cursor : pointer;
        padding : 4%;
    }

    /* On hover */
     li:hover {
        background-color: dodgerblue; /* changes background */
    }

    nav img{
        max-height : 3vh;
        margin-right : 2vh;
        margin-left : 1vh;
    }

    #header{
        display : flex;
        justify-content : flex-start;
        row-gap : 9px;
        align-items : center;
        height : 4vh;
        padding: 4vh 2vw 0 2vw;
    }

    #header img{
        max-height: 8vh;
    }

    nav a {
        text-decoration: none;
        color: inherit;
    }

    .navbar-container {
        display: flex;
        flex-direction: column;
        height: 100vh; /* full sidebar height */
    }

    .profile-card {
        display: flex;
        align-items: center;
        padding: 12px;
        margin: 10px;
        border-radius: 10px;
        background: #f0f0f0;
        cursor: pointer;
        margin-top: auto; /* pushes profile card to bottom */
    }

    .profile-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
    }

    .profile-name {
        font-weight: bold;
        font-size: 14px;
        color: #000;
    }

    .profile-role {
        font-size: 12px;
        color: gray;
    }


</style>

<div class="navbar-container">
    <div id="header" style="height:45px;text-align: center;color:black;font-size:1.2rem;line-height:45px;">
        <img src="Icons/Logo2.jpg" alt="Logo" />
        <span>DouaneCRM</span>
    </div>

    <nav>
        <ul>
            <li @onclick="@(() => Navigate("/dashboard"))">
                <img src="/Icons/dashboard.png" />Dashboard
            </li>

            <li @onclick="@(() => Navigate("/list-operateurs"))">
                <img src="/Icons/operateur.png" />Opérateurs
            </li>

            <li @onclick="@(() => Navigate("/list-controles"))">
                <img src="/Icons/control.png" />Contrôles
            </li>

            <li @onclick="@(() => Navigate("/list-fiches-accompagnement"))">
                <img src="/Icons/ficheacc.png" />Fiches d'Accompagnement
            </li>

            <li @onclick="@(() => Navigate("/list-liquidations"))">
                <img src="/Icons/liquidity.png" />Liquidations
            </li>

            <li @onclick="@(() => Navigate("/list-affaires-contentieuses"))">
                <img src="/Icons/courthouse.png" />Affaires Contentieuses
            </li>

            <li @onclick="@(() => Navigate("/list-reds"))">
                <img src="/Icons/achievement.png" />RED
            </li>


        </ul>
    </nav>

    <!-- Sticky profile -->
    <div class="profile-card">
        <img src="Icons/7309681.jpg" alt="User Avatar" class="profile-avatar" />
        <div class="profile-info">
            <div class="profile-name">Prenom Nom</div>
            <div class="profile-role">Admin</div>
        </div>
    </div>
</div>


@code {
    SfSidebar sidebarObj;
    public bool SidebarToggle = false;
    public void Close()
    {
        SidebarToggle = false;
    }
    public void Navigate(string path)
    {
        navigationManager.NavigateTo(path);
    }
}

